<g:if test="${objects}">    	<%@ page import="org.springframework.util.ClassUtils" %>	<ul class="latest-news-list">		<g:each in="${objects}" var="object" status="i" >			<g:set var="className" value="${ClassUtils.getShortName(object.getClass()).replaceAll('_', '')}" />			<g:set var="linkName" value="${className[0].toLowerCase() + className[1..-1]}" />	       	<li class="latest-news-item">	        	<a class="w-inline-block" href="<blackFish:setLink object="${object}" name="${linkName}" />">	          		<div class="w-col w-col-12 text-col">						<h4 class="latest-news-heading">${object.title}</h4>						<div class="latest-news-text">							${object?.shortDescription}						</div>					</div>				</a>			</li>		</g:each>	</ul></g:if>