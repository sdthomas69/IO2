<html>       <head>        <title>Associate Person</title>		<meta name="layout" content="main" />		<g:javascript plugin="remote-pagination" library="remoteNonStopPageScroll"/>		<tm:resources jquery="false" opacity=".9"/>    </head>        <body>	    <g:render template="/storyAdmin/adminInfo" />	   	<g:render template="errors" />	   	<g:render template="steps" />	   	<div class="w-section">	   		<div class="w-container body-text-container primary-small contains-admin-nav-bar">	   			<h2 class="h2-heading-with-underline">Associate People</h2>	   			<div class="w-row">	   				<div class="w-col w-col-12">	   					<g:if test="${story.people}">		                     <h4 class="h4-heading-admin">Associated People</h4>		                     <g:render template="personList" />		                </g:if>	   				</div>	   			</div>	   			<div class="w-form">	   				<g:formRemote 						class="stories-form files"						url="[controller:'storyAdmin', action:'personSearch', params: ['id':story.id]]" 						update="[success:'list', failure:'error']"						name="remoteForm" 						id="${story.id}"						method="get">						<div class="w-row search-row">	                		<div class="w-col w-col-9 search-column admin">	                			<g:textField class="w-input search-text-field files-field" id="search_query" name="q" value="${params.q}"/>	                		</div>	                		<div class="w-col w-col-3 w-clearfix search-column admin">	                			<input class="w-button searchsubmit" type="submit" value="Search" />	                		</div>	                	</div>	                	<div class="w-row">							<div class="w-col w-col-3">								<select class="w-select select-field" name="category" size="1">									<option value="${params.category}">${params.category ? params.category  : 'Category'}</option>									<option value="Faculty">Faculty</option>									<option value="Staff">Staff</option>									<option value="Graduate Student">Graduate</option>									<option value="Undergraduate Student">Undergraduate</option>								</select>							</div>							<div class="w-col w-col-3">								<select class="w-select select-field" name="option" size="1">									<option value="${params.option}">${params.option ? params.option  : 'Research'}</option>									<option value="Biological Oceanography">Biological</option>									<option value="Chemical Oceanography">Chemical</option>									<option value="MG&G">Marine Geology & Geophysics</option>									<option value="Physical Oceanography">Physical</option>									<option value="Administration">Administration</option>								</select>							</div>							<div class="w-col w-col-2">								<g:checkBox name="nameOnly" value="${false}"></g:checkBox>								<label for="nameOnly">Search Name Only</label>							</div>						</div>					</g:formRemote>	                <div id="spinner" class="spinner" style="display:none;">	                    <img src="${resource(dir:'images',file:'spinner.gif')}" alt="Spinner" />	                </div>					<g:form method="post" >						<input type="hidden" name="id" value="${story.id}" />						<div id="list"></div>			        </g:form>	                <div id="error"></div>	   			</div>	   		</div>	   	</div>   	</body></html>