<g:set var="thumbnail" value="${grailsApplication.config.default_thumbnail}"/><html><head>    <title>${story}</title>    <meta name="layout" content="main"/></head><body><g:render template="/storyAdmin/adminInfo"/><g:render template="/storyAdmin/errors"/><g:render template="/storyAdmin/steps"/><div class="w-section">    <div class="w-container body-text-container primary-small contains-admin-nav-bar">        <h2>Edit &amp; Review your Story</h2>        <div class="w-form">            <g:form method="post">                <input type="hidden" name="id" value="${story.id}"/>                <input type="hidden" name="version" value="${story?.version}"/>                <div class="w-tabs admin-text-tabs" data-duration-in="300" data-duration-out="100">                    <div class="w-tab-menu admin-tabs-menu-container">                        <a class="w-tab-link ${params.tab == '1' ? 'w--current' : ''} w-inline-block tab-link-button"                           data-w-tab="Tab 1">                            <div>1. Choose Placement, Type &amp; Category</div>                        </a>                        <a class="w-tab-link ${params.tab == '2' ? 'w--current' : ''} w-inline-block tab-link-button"                           data-w-tab="Tab 2">                            <div>2. Choose a Layout</div>                        </a>                        <a class="w-tab-link ${params.tab == '3' ? 'w--current' : ''} w-inline-block tab-link-button"                           data-w-tab="Tab 3">                            <div>3. Publish</div>                        </a>                    </div>                    <div class="w-tab-content admin-tabs-container">                        <div class="w-tab-pane w--tab-active" data-w-tab="Tab 1">                            <div class="w-row">                                <div class="w-col w-col-6">                                    <label for="name">Story Placement:</label>                                    <ul class="w-list-unstyled">                                        <li>                                            <div class="w-checkbox">                                                <g:checkBox class="w-checkbox-input" name="slideshow"                                                            value="${story.slideshow}"></g:checkBox>                                                <label class="w-form-label" for="slideshow">                                                    Home Page Slideshow (requires a large image)                                                </label>                                            </div>                                        </li>                                        <li>                                            <div class="w-checkbox">                                                <g:checkBox class="w-checkbox-input" name="featured"                                                            value="${story.featured}"></g:checkBox>                                                <label class="w-form-label" for="featured">                                                    Home Page Feature                                                </label>                                            </div>                                        </li>                                        <li>                                            <div class="w-checkbox">                                                <g:checkBox class="w-checkbox-input" name="news"                                                            value="${story.news}"></g:checkBox>                                                <label class="w-form-label" for="news">                                                    News                                                </label>                                            </div>                                        </li>                                    </ul>                                </div>                                <div class="w-col w-col-6">                                    <%--											<label for="name">Story Type:</label>--%>                                    <ul class="w-list-unstyled">                                        <%--<li>                                            <div class="w-checkbox">                                                <g:checkBox                                                    class="w-checkbox-input"                                                    name="type"                                                    value="EVENT ${story.type?.toString() == 'EVENT' ? 'checked="checked"' : '' }" >                                                </g:checkBox>                                                <label class="w-form-label" for="type">                                                    Event (Calendar)                                                </label>                                            </div>                                        </li>--%>                                        <li>                                            <label for="Category">                                                Category:                                            </label>                                            <g:select                                                    class="w-select"                                                    name="category"                                                    value="${story.category}"                                                    from="${['Person']}"                                                    noSelection="['': '-None']"/>                                        </li>                                    </ul>                                </div>                            </div>                        </div>                        <div class="w-tab-pane" data-w-tab="Tab 2">                            <div class="w-row">                                <div class="w-col w-col-3">                                    <div class="w-checkbox">                                        <%--<g:radioGroup name="layout"                                                values="${cev.blackFish.Story$Layout?.values()}"                                                labels="${cev.blackFish.Story$Layout.values()*.name()}"                                                value="${milestoneInstance?.layout?.name()}"                                            >                                              ${it.radio} <g:message code="${it.label}" />&nbsp;                                            </g:radioGroup>--%>                                        <input                                                class="w-checkbox-input"                                                type="radio"                                                name="layout"                                                id="layout"                                                value="ONECOLUMN" ${story.layout?.toString() == 'ONECOLUMN' ? 'checked="checked"' : ''}>                                        <label class="w-form-label" for="layout">                                            Single Column                                        </label>                                    </div>                                    <img src="<g:resource file='images/admin-ex-sidebarleft.jpg'/>" alt="Single Column"                                         title="Single Column">                                </div>                                <div class="w-col w-col-3">                                    <div class="w-checkbox">                                        <input                                                class="w-checkbox-input"                                                type="radio"                                                name="layout"                                                id="layout"                                                value="STANDARD" ${story.layout?.toString() == 'STANDARD' ? 'checked="checked"' : ''}>                                        <label class="w-form-label" for="layout">Double Column</label>                                    </div>                                    <img src="<g:resource file='images/admin-ex-singlecol.jpg'/>" alt="Double Column"                                         title="Double Column">                                </div>                                <div class="w-col w-col-3">                                    <div class="w-checkbox">                                        <input                                                class="w-checkbox-input"                                                type="radio"                                                name="layout"                                                id="layout"                                                value="PORTAL" ${story.layout?.toString() == 'PORTAL' ? 'checked="checked"' : ''}/>                                        <label class="w-form-label" for="layout">                                            Portal                                        </label>                                    </div>                                    <img src="<g:resource file='images/admin-ex-storybottom.jpg'/>" alt="Portal"                                         title="Portal">                                </div>                                <%--<div class="w-col w-col-3">                                    <div class="w-checkbox">                                        <input                                            class="w-checkbox-input"                                            type="radio"                                            name="layout"                                            id="layout"                                            value="GALLERY" ${story.layout?.toString() == 'GALLERY' ? 'checked="checked"' : '' }                                        >                                        <label class="w-form-label" for="layout">                                            Gallery                                        </label>                                    </div>                                    <img src="<g:resource file='images/admin-ex-list.jpg' />" alt="Gallery" title="Gallery">                                </div>--%>                            </div>                        </div>                        <div class="w-tab-pane" data-w-tab="Tab 3">                            <div class="w-row">                                <div class="w-col w-col-2">                                    <label for="Author">Published:</label>                                    <div class="w-checkbox">                                        <g:checkBox class="w-checkbox-input" name="published"                                                    value="${story.published}"></g:checkBox>                                        <label class="w-form-label" for="Publish">                                            Publish                                        </label>                                    </div>                                </div>                                <div class="w-col w-col-5">                                    <label for="Author">Author:</label>                                    <g:select                                            class="w-select"                                            id="Author"                                            optionKey="id"                                            from="${cev.blackFish.User.list([sort: 'firstName'])}"                                            name="author.id"                                            value="${story?.author?.id}"                                            noSelection="['': 'None']"/>                                </div>                            </div>                            <div class="w-row">                                <label for="Category">Date:</label>                                <g:datePicker name="date" value="${story.date}" years="${2012..2020}"></g:datePicker>                            </div>                        </div>                    </div>                </div>                <g:actionSubmit class="w-button submit-button" action="Update" value="Update"/>                <g:actionSubmit class="w-button submit-button delete"                                onclick="return confirm('Are you sure? This cannot be undone.');" value="Delete"/>            </g:form>        </div>    </div></div></body></html>