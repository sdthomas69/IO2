<g:if test="${story.files?.size() > 0}">    <g:form method="post">        <input type="hidden" name="id" value="${story.id}"/>        <div class="w-row">            <g:each in="${story.files.sort()}" var="file" status="i">                <div class="w-col w-col-3">                    <g:link class="w-inline-block spotlight-link-block" controller='file' action='show' id='${file.id}'>                        <img src="<g:resource file='${file.smallImageSquared}'/>" alt="${file}"/>                    </g:link><br/>                    <g:link controller='file' action='show' id='${file.id}'>${file}</g:link>                    <ul class="w-list-unstyled w-clearfix admin-nav-bar-list file-edit-list">                        <li class="admin-nav-bar-list-item">                            <g:link                                    title="Make Primary Image"                                    alt="Make Primary Image"                                    class="w-inline-block admin-link"                                    controller='storyAdmin'                                    params='["id": story.id, "fileId": file.id]'                                    action='setPrimaryImage'>                                <div class="admin-link-text-block file-button">                                    P                                </div>                            </g:link>                        </li>                        <li class="admin-nav-bar-list-item">                            <g:link                                    title="Set as EmbeddedImage 1"                                    alt="Set as EmbeddedImage 1"                                    class="w-inline-block admin-link"                                    controller='storyAdmin'                                    params='["id": story.id, "fileId": file.id]'                                    action='embedImage1'>                                <div class="admin-link-text-block file-button">                                    E1                                </div>                            </g:link>                        </li>                        <li class="admin-nav-bar-list-item">                            <g:link                                    title="Set as EmbeddedImage 2"                                    alt="Set as EmbeddedImage 2"                                    class="w-inline-block admin-link"                                    controller='storyAdmin'                                    params='["id": story.id, "fileId": file.id]'                                    action='embedImage2'>                                <div class="admin-link-text-block file-button">                                    E2                                </div>                            </g:link>                        </li>                        <li class="admin-nav-bar-list-item">                            <g:checkBox name="files" value="${file.id}" checked="false"></g:checkBox>                        </li>                    </ul>                </div>            </g:each>        </div>        <div class="w-row">            <div class="w-col w-col-3">                <g:actionSubmit class="w-button submit-button" action="RemoveFiles" value="Remove Selected Files"/>            </div>        </div>    </g:form></g:if>