<g:if test="${searchResult?.getTotalCount() > 0}">    <g:set var="thumbnail" value="${grailsApplication.config.default_thumbnail}"/>    <div class="w-row">        <div class="w-col w-col-9 w-clearfix description-text-column">            <g:each in="${searchResult}" var="result" status="i">                <blackFish:tagWrapper                        tag="div"                        className="w-row file-list-row"                        iterations="4"                        counter="${i}"                        total="${searchResult.getTotalCount()}">                    <g:set var="link"                           value="${createLink(controller: 'user', action: 'home', params: ['firstAndLast': result?.name])}"/>                    <div class="w-col w-col-3 spacing">                        <a href="${link}">                            <img src="<g:resource file='${result?.primaryImage?.smallImageSquared ?: thumbnail}'/>"/>                        </a>                        <div class="file-list-text">                            <g:checkBox name="people" value="${result.id}" checked="false"></g:checkBox>                            <g:link action="edit" controller="userAdmin" id="${result.id}">                                ${result}                            </g:link>                        </div>                    </div>                </blackFish:tagWrapper>            </g:each>        <%--<div class="paginateButtons">            <util:remotePaginate                action="personSearch"                total="${searchResult?.getTotalCount()}"                update="list" params="${params}"            />        </div>--%>            <util:remoteNonStopPageScroll                    loadingHTML="spinner"                    heightOffset="150"                    action="personSearch"                    total="${searchResult?.getTotalCount()}"                    update="list"                    params="${params}"/>        </div>        <div class="w-col w-col-3 sidebar-right totop">            <g:actionSubmit class="w-button submit-button" action="AddPeople" value="Add Selected People"/>        </div>    </div></g:if><g:else><p>There are no results for your query</p></g:else>