<html><head>    <title>Files</title>    <meta name="layout" content="main"/></head><body><g:render template="/storyAdmin/adminInfo"/><g:render template="errors"/><g:render template="steps"/><div class="w-section">    <div class="w-container body-text-container primary-small contains-admin-nav-bar">        <h2 class="h2-heading-with-underline">            <g:link                    params="['storyId': story.id, 'author.id': story?.author?.id]"                    controller="fileAdmin"                    action="create">                Add,            </g:link>            or Associate Files        </h2>        <div class="w-row">            <div class="w-col w-col-12">                <g:if test="${story.primaryImage}">                    <h4 class="h4-heading-admin">Primary Image</h4>                    <g:render template="primaryImage"/>                </g:if>            </div>        </div>        <div class="w-row">            <div class="w-col w-col-6">                <g:if test="${story.embeddedImage1}">                    <h4 class="h4-heading-admin">Embedded Image 1</h4>                    <g:render template="embedded1"/>                </g:if>            </div>            <div class="w-col w-col-6">                <g:if test="${story.embeddedImage2}">                    <h4 class="h4-heading-admin">Embedded Image 2</h4>                    <g:render template="embedded2"/>                </g:if>            </div>        </div>        <div class="w-row">            <div class="w-col w-col-12">                <g:if test="${story.files}">                    <div class="w-clearfix associated-stories">                        <h4 class="h4-heading-admin">Associated Files</h4>                        <g:render template="fileList"/>                    </div>                </g:if>            </div>        </div>        <div class="w-form">            <g:formRemote                    class="stories-form files"                    url="[controller: 'storyAdmin', action: 'fileSearch', params: [template: 'remoteFileSearch', 'id': story.id, sort: 'title', order: 'desc']]"                    update="[success: 'list', failure: 'error']"                    name="remoteForm"                    id="${story.id}"                    method="get">                <div class="w-row search-row">                    <div class="w-col w-col-9 search-column admin">                        <g:textField class="w-input search-text-field files-field" id="search_query" name="q"                                     value="${params.q}"/>                    </div>                    <div class="w-col w-col-3 w-clearfix search-column admin">                        <input class="w-button searchsubmit" type="submit" value="Search"/>                    </div>                </div>                <div class="w-row">                    <%--<select class="w-select select-field" name="bool" size="1">                        <option value="">Options</option>                    </select>                    --%>                    <div class="w-col w-col-2">                        <select class="w-select select-field" name="type" size="1">                            <option value="">Type</option>                            <option value="Image">Image</option>                            <option value="PDF">PDF</option>                            <option value="Quicktime">Quicktime</option>                            <option value="KML">KML</option>                        </select>                    </div>                    <div class="w-col w-col-2">                        <select class="w-select select-field" name="category" size="1">                            <option value="">Category</option>                        </select>                    </div>                    <div class="w-col w-col-2">                        <g:checkBox name="titleOnly" value="${false}"></g:checkBox>                        <label for="titleOnly">Titles Only</label>                    </div>                </div>            </g:formRemote>            <div id="spinner" class="spinner" style="display:none;">                <img src="${resource(dir: 'images', file: 'spinner.gif')}" alt="Spinner"/>            </div>            <g:form method="post">                <input type="hidden" name="id" value="${story.id}"/>                <div id="list"></div>            </g:form>            <div id="error"></div>        </div>    </div></div></body></html>