<html><head>    <title>Menuing</title>    <meta name="layout" content="main"/></head><body><g:render template="/storyAdmin/adminInfo"/><g:render template="/storyAdmin/errors"/><g:render template="/storyAdmin/steps"/><div class="w-section">    <div class="w-container body-text-container primary-small contains-admin-nav-bar">        <h2>Menuing</h2>        <div class="w-form">            <div class="w-row">                <div class="w-col w-col-3">                    <g:form method="post">                        <input type="hidden" name="id" value="${story.id}"/>                        <input type="hidden" name="version" value="${story?.version}"/>                    <%--<label for="name">Site:</label>                    <g:if test="${story.site}">                        Currently: <g:link controller="site" action="edit" id="${story.site.id}">${story.site}</g:link>                    </g:if>                    <g:select                        class="w-select select-field"                        optionKey="id"                        from="${cev.blackFish.Site.list(sort:'title')}"                        name="site.id" value="${story?.site?.id}"                        noSelection="['':'None']" >                    </g:select>                    <g:actionSubmit class="w-button submit-button" action="AddSite" value="Update" />                    --%>                        <label for="name">Menu Bar:</label>                        <g:if test="${story.menuSet}">                            Currently: <g:link controller="menuSetAdmin" action="edit"                                               id="${story.menuSet.id}">${story.menuSet}</g:link>                        </g:if>                        <g:select                                class="w-select select-field"                                optionKey="id"                                from="${cev.blackFish.MenuSet.list(sort: 'title')}"                                name="menuSet.id" value="${story?.menuSet?.id}"                                noSelection="['': 'None']">                        </g:select>                        <g:actionSubmit class="w-button submit-button" action="AddMenuSet" value="Update"/>                    </g:form>                </div>            </div>        </div>    </div></div></body></html>