<g:set var="thumbnail" value="${grailsApplication.config.default_thumbnail}"/><html><head>    <title>Edit Text</title>    <meta name="layout" content="main"/>    <script type="text/javascript" src="<g:resource dir='js' file='ckeditor/ckeditor.js'/>"></script></head><body><g:render template="/storyAdmin/adminInfo"/><g:render template="errors"/><g:render template="steps"/><div class="w-section">    <div class="w-container body-text-container primary-small contains-admin-nav-bar">        <h2>Edit Text</h2>        <div class="w-form">            <g:form method="post">                <g:if test="${params.id}">                    <input type="hidden" name="id" value="${story.id}"/>                    <input type="hidden" name="version" value="${story?.version}"/>                </g:if>                <g:if test="${params?.author?.id}">                    <input type="hidden" name="author.id" value="${params.author.id}"/>                </g:if>                <g:if test="${params?.menuSet?.id}">                    <input type="hidden" name="menuSet.id" value="${params.menuSet.id}"/>                </g:if>                <div class="w-tabs admin-text-tabs" data-duration-in="300" data-duration-out="100">                    <div class="w-tab-menu admin-tabs-menu-container">                        <a class="w-tab-link w-inline-block tab-link-button w--current" data-w-tab="Tab 1">                            <div>Common</div>                        </a>                        <a class="w-tab-link w-inline-block tab-link-button" data-w-tab="Tab 2">                            <div>Advanced</div>                        </a>                    </div>                    <div class="w-tab-content admin-tabs-container">                        <div class="w-tab-pane w--tab-active" data-w-tab="Tab 1">                            <div class="w-row">                                <div class="w-col w-col-6">                                    <label for="name">Title:</label>                                    <input                                            type="text"                                            id="title"                                            class="w-input admin-text-field value ${hasErrors(bean: story, field: 'title', 'errors')}"                                            name="title"                                            data-name="title"                                            required="required"                                            value="${fieldValue(bean: story, field: 'title')}"                                            placeholder="A required short title for your page">                                    <label for="Menu-Title">Long Title:</label>                                    <input                                            type="text"                                            id="pageTitle"                                            class="w-input admin-text-field value ${hasErrors(bean: story, field: 'pageTitle', 'errors')}"                                            name="pageTitle"                                            data-name="pageTitle"                                            placeholder="Optional long title for your page"                                            value="${fieldValue(bean: story, field: 'pageTitle')}">                                </div>                                <div class="w-col w-col-6">                                    <label for="URL-Title">URL Title:</label>                                    <input                                            type="text"                                            id="urlTitle"                                            data-name="urlTitle"                                            class="w-input admin-text-field value ${hasErrors(bean: story, field: 'urlTitle', 'errors')}"                                            name="urlTitle"                                            readonly="readonly"                                            placeholder="Automatically Generated"                                            value="${fieldValue(bean: story, field: 'urlTitle')}">                                    <label for="Tag-Line">Tag Line:</label>                                    <input                                            type="text"                                            id="tagline"                                            data-name="tagline"                                            class="w-input admin-text-field value ${hasErrors(bean: story, field: 'tagline', 'errors')}"                                            name="tagline"                                            placeholder="Optional tag line for your page"                                            value="${fieldValue(bean: story, field: 'tagline')}">                                </div>                            </div>                            <label for="Short-Description">Short Description:</label>                            <input                                    type="text"                                    id="shortDescription"                                    class="w-input admin-text-field value ${hasErrors(bean: story, field: 'shortDescription', 'errors')}"                                    name="shortDescription"                                    data-name="shortDescription"                                    value="${fieldValue(bean: story, field: 'shortDescription')}"                                    placeholder="Enter your Short Description">                            <label for="Pull-Quote">Pull Quote:</label>                            <input                                    type="text"                                    id="pullQuote"                                    class="w-input admin-text-field  value ${hasErrors(bean: story, field: 'pullQuote', 'errors')}"                                    name="pullQuote"                                    data-name="pullQuote"                                    value="${fieldValue(bean: story, field: 'pullQuote')}"                                    placeholder="Optional pull quote">                            <label for="Description-Text">Story Body Text:</label>                            <textarea placeholder="A required description" class="ckeditor" id="description"                                      name="description">                                ${story.description}                            </textarea>                        </div>                        <div class="w-tab-pane" data-w-tab="Tab 2">                            <div class="w-row">                                <div class="w-col w-col-6">                                    <label for="URI-Field">URI:</label>                                    <input                                            type="text"                                            id="uri"                                            class="w-input admin-text-field value ${hasErrors(bean: story, field: 'uri', 'errors')}"                                            name="uri"                                            value="${fieldValue(bean: story, field: 'uri')}"                                            data-name="uri"                                            placeholder="Optional relative link">                                    <label for="Layer-ID">KML Layer ID</label>                                    <input                                            type="text"                                            id="layerId"                                            class="w-input admin-text-field value ${hasErrors(bean: story, field: 'layerId', 'errors')}"                                            name="layerId"                                            data-name="layerId"                                            placeholder="Optional KML layer ID"                                            value="${fieldValue(bean: story, field: 'layerId')}">                                </div>                                <div class="w-col w-col-6">                                    <label for="Data-URL">Data URL</label>                                    <input                                            type="text"                                            id="dataURL"                                            class="w-input admin-text-field value ${hasErrors(bean: story, field: 'dataURL', 'errors')}"                                            name="dataURL"                                            data-name="dataURL"                                            placeholder="Optional custom link to your data"                                            value="${fieldValue(bean: story, field: 'dataURL')}">                                    <label for="Data-URL">Link</label>                                    <div class="w-checkbox">                                        <g:checkBox class="w-checkbox-input" name="isLink"                                                    value="${story.isLink}"></g:checkBox>                                        <label class="w-form-label" for="slideshow">                                            Story is a link to URI                                        </label>                                    </div>                                </div>                            </div>                            <label for="Head-Script">Head Script</label>                            <textarea class="w-input admin-text-area" name="headScript">${story.headScript}</textarea>                            <label for="Body-Script">Body Script</label>                            <textarea class="w-input admin-text-area" name="bodyScript">${story.bodyScript}</textarea>                            <label for="Meta-Keywords">Meta Keywords</label>                            <input                                    type="text"                                    id="metaKeywords"                                    class="w-input admin-text-field value ${hasErrors(bean: story, field: 'metaKeywords', 'errors')}"                                    name="metaKeywords"                                    data-name="metaKeywords"                                    value="${fieldValue(bean: story, field: 'metaKeywords')}"                                    placeholder="Optional meta keywords">                            <label for="Meta-Description">Meta Description</label>                            <input                                    type="text"                                    id="metaDescription"                                    class="w-input admin-text-field value ${hasErrors(bean: story, field: 'metaDescription', 'errors')}"                                    name="metaDescription"                                    data-name="metaDescription"                                    value="${fieldValue(bean: story, field: 'metaDescription')}"                                    placeholder="Optional meta description">                        </div>                    </div>                </div>                <g:if test="${params.id}">                    <g:actionSubmit class="w-button submit-button" action="UpdateText" value="Update"/>                </g:if>                <g:else>                    <g:actionSubmit class="w-button submit-button" action="Save" value="Save"/>                </g:else>            </g:form>        </div>    </div></div></body></html>