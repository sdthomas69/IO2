<html>    <head>        <title>Create Text</title>		<link rel="stylesheet" href="<g:resource dir='css' file='admin.css' />" />		<meta name="layout" content="${params.site ?: 'oldMain'}" />		<script type="text/javascript" src="<g:resource dir='js' file='ckeditor/ckeditor.js' />"></script>    </head>    <body>		<div id="adminBg" class="row">			<div class="large-12 columns">				<g:render template="adminInfo" />				<g:render template="errors" />				<g:render template="steps" />				<h3 class="storyTitle">Enter Story Text</h3>				<g:form method="post" >					<g:if test="${params.id}"><input type="hidden" name="id" value="${story.id}" /></g:if>					<g:if test="${params?.author?.id}"><input type="hidden" name="author.id" value="${params.author.id}" /></g:if>					<g:if test="${params?.menuSet?.id}"><input type="hidden" name="menuSet.id" value="${params.menuSet.id}" /></g:if>					<fieldset>						<table>							<tbody>								<tr class="prop">									<td valign="top" class="name"><label for="title">Title</label></td>									<td valign="top" class="value ${hasErrors(bean:story,field:'title','errors')}"><input type="text" id="title" name="title" value="${fieldValue(bean:story,field:'title')}" /></td>								</tr>								<tr class="prop">									<td valign="top" class="name"><label for="tagline">Tagline</label></td>									<td valign="top" class="value ${hasErrors(bean:story,field:'tagline','errors')}"><input type="text" id="tagline" name="tagline" value="${fieldValue(bean:story,field:'tagline')}" /></td>								</tr>								<tr class="prop">		                            <td valign="top" class="name"><label for="shortDescription">Short Description</label></td>		                            <td valign="top" class="value ${hasErrors(bean:story,field:'shortDescription','errors')}"><textarea rows="3" cols="50" name="shortDescription">${fieldValue(bean:story, field:'shortDescription')}</textarea></td>		                        </tr>								<tr class="prop">	                                <td valign="top" class="name"><label for="description">Description</label></td>	                                <td valign="top" class="value ${hasErrors(bean:story,field:'description','errors')}">	                                    <textarea class="ckeditor" id="description" name="description">											${story.description}										</textarea>	                                </td>	                            </tr>	                            <%--<tr class="prop">		                            <td valign="top" class="name"><label for="uri">URI:</label></td>		                            <td valign="top" class="value ${hasErrors(bean:story,field:'uri','errors')}"><input type="text" id="uri" name="uri" value="${fieldValue(bean:story,field:'uri')}" /></td>		                        </tr>	                            <tr class="prop">		                            <td valign="top" class="name"><label for="metaKeywords">Meta Keywords:</label></td>		                            <td valign="top" class="value ${hasErrors(bean:story,field:'metaKeywords','errors')}"><input type="text" id="metaKeywords" name="metaKeywords" value="${fieldValue(bean:story,field:'metaKeywords')}" /></td>		                        </tr>		                        <tr class="prop">		                            <td valign="top" class="name"><label for="metaDescription">Meta Description:</label></td>		                            <td valign="top" class="value ${hasErrors(bean:story,field:'metaDescription','errors')}"><input type="text" id="metaDescription" name="metaDescription" value="${fieldValue(bean:story,field:'metaDescription')}" /></td>		                        </tr>--%>							</tbody>						</table>						<g:if test="${params.id}">							<g:actionSubmit class="button" action="UpdateText" value="Update" />						</g:if>						<g:else>							<g:actionSubmit class="button" action="Save" value="Save" />						</g:else>					</fieldset>				</g:form>			</div>		</div>    </body></html>