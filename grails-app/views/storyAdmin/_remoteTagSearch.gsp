<g:if test="${searchResult?.getTotalCount() > 0}">    <g:set var="thumbnail" value="${grailsApplication.config.default_thumbnail}"/>    <g:form method="post">        <input type="hidden" name="id" value="${story.id}"/>        <ul class="w-list-unstyled w-clearfix tags-list">            <g:each var="result" in="${searchResult}" status="i">                <li class="tag-list-item">                    <div class="w-checkbox w-clearfix tag-link-checkbox">                        <g:checkBox name="tags" value="${result.id}" checked="false"></g:checkBox>                        <label class="w-form-label" for="checkbox">                            <g:link class="tag-heading" controller='tag' action='show'                                    id='${result.id}'>${result.title}</g:link>                        </label>                    </div>                </li>            </g:each>        </ul>        <g:actionSubmit class="w-button submit-button" action="AddTags" value="Add Selected Tags"/>        <g:if test="${searchResult.getTotalCount() > params.max.toInteger()}">            <div class="paginateButtons">                <util:remotePaginate action="tagSearch" total="${searchResult?.getTotalCount()}" update="list"                                     params="${params}"/>            </div>        </g:if>    </g:form></g:if><g:else><p>There are no results for your query</p></g:else>