<g:if test="${story.hasImages()}">	<g:if test="${story.images.size() == 1 && story.images[0] == story?.primaryImage}">		<g:set var="sameAsPrimary" value="${true}" />	</g:if>	<g:if test="${!sameAsPrimary}">		<div class="w-col">			<h3 class="eventstitle">Image Gallery</h3>			<g:each in="${story.images.sort()}" var="file" status="i">				<g:set var="link" value="${createLink(controller: 'file', action: 'title', params: ['title': file.urlTitle])}" />				<a class="lightbox-link w-inline-block w-lightbox" href="#">					<g:if test="${i == 0 }">						<blackFish:wflowChange 							sizes="100vw"							src="${resource(file: file.smallImage)}"							small="${resource(file: file?.smallImage)}"							medium="${resource(file: file?.mediumImage)}"							large="${resource(file: file?.mediumImage)}"							retina="${resource(file: file?.mediumImage)}"							width="100%"							title="${file.title}"							alt="${file.title}"						/>					</g:if>					<script class="w-json" type="application/json">              				{ 								"group": "lightboxImages", "items": [{                					"_id": "${file.id}",                					"fileName": "${file.id}${file.xLargeImage}",                					"origFileName": "${file.xLargeImage}",                					"type": "image",                					"url": "<g:resource file='${file.xLargeImage}' />",                					"caption": "${file.shortDescription}"              					}]							}            		</script>				</a>			</g:each>		</div>	</g:if></g:if>