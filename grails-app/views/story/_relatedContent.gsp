<g:if test="${story.hasNonImages()}">    <div class="w-col">        <h3 class="eventstitle">Related Files</h3>        <ul class="w-list-unstyled">            <g:each in="${story.nonImageFiles?.sort()}" var="file" status="i">                <li class="w-clearfix congratslistitem">                    <a class="w-inline-block fblocklink" href="<blackFish:setLink object="${file}" name="file"/>">                        <img class="w-inline-block congratsimage latest-news-image file-link-block"                             src="<g:resource file='${file?.smallImageSquared ?: thumbnail}'/>" width="60"/>                        <div class="textblock">                            <h4 class="latest-news-heading">${file.title}</h4>                        </div>                    </a>                </li>            </g:each>        </ul>    </div></g:if>