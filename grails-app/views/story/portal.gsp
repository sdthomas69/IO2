<g:set var="thumbnail" value="${grailsApplication.config.default_thumbnail}" /><html>	<head>		<g:render template="/story/head" />	</head>		<body>		<g:render template="/storyAdmin/adminInfo" />		<div class="w-section primary-image-big">			<g:if test="${story?.primaryImage}">				<div class="primary-image-overlay-gradient"></div>				<g:render template="publicPrimaryImage" />			</g:if>			<div class="w-container primary-image-text-container">	      		<h1 class="large-primary-image-heading">${story.title}</h1>	      		<g:if test="${story.tagline}">	      			<div class="large-primary-image-text">${story.tagline}</div>	      		</g:if>	    	</div>	    </div>		<div class="w-section">			<div class="w-container body-text-container">				<div class="w-row">					<div class="w-col w-col-9 w-clearfix description-text-column">						<div class="w-hidden-small w-hidden-tiny w-clearfix media-elements-block">							<g:if test="${story.pullQuote}">								<h2 class="pull-quote-text">${story.pullQuote}</h2>							</g:if>							<g:render template="/story/embedded" />							<g:render template="/story/embedded2" />						</div>						${story.description.encodeAsRaw()}						${story.bodyScript.encodeAsRaw()}						<div class="w-hidden-main w-hidden-medium w-clearfix media-elements-block">							<g:if test="${story.pullQuote}">								<h2 class="pull-quote-text">${story.pullQuote}</h2>							</g:if>							<g:render template="/story/embedded" />							<g:render template="/story/embedded2" />						</div>						</div>										<!-- Right Column -->										<div class="w-col w-col-3 sidebar-right">											<!-- Menu -->												<g:render template="/story/leftMenu" />												<!-- Images -->						<g:render template="/story/relatedImages" />												<!-- Files -->												<g:render template="/story/relatedContent" />												<!-- Tags -->												<g:render template="/common/tags" />					</div>				</div>			</div>		</div>				<!-- Related Stories -->				<g:render template="/story/relatedBottomStories" />		<g:render template="/storyAdmin/editButton" />	</body></html>