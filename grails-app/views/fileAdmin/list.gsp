<html>    <head>        <meta name="layout" content="main" />        <title>File List</title>	</head>		<body>		<g:render template="/fileAdmin/adminInfo" />		<div class="w-section">			<div class="w-container body-text-container single-column admin-column">				<div class="w-form">					<g:form class="stories-form" action="list" method="get">						<div class="w-row">							<div class="w-col w-col-2">								<select class="w-select select-field" name="view" size="1">									<option value="${params.view}">${params.view ? 'View: ' + params.view  : 'View Options'}</option>									<option value="icon">Icon</option>									<option value="list">List</option>								</select>							</div>							<div class="w-col w-col-3">								<select class="w-select select-field" name="type" size="1">									<option value="${params.type}">${params.type ? 'Type: ' + params.type  : 'Type Options'}</option>									<option value="">None</option>									<option value="Image">Image</option>									<option value="PDF">PDF</option>									<option value="Text/Doc">Text/Doc</option>									<option value="PowerPoint">PowerPoint</option>									<option value="Quicktime">Quicktime</option>									<option value="KML">KML</option>								</select>							</div>							<div class="w-col w-col-3">								<g:checkBox name="titleOnly" value="${false}"></g:checkBox>								<label for="titleOnly">Search Titles Only</label>							</div>						</div>						<div class="w-row search-row">							<div class="w-col w-col-9 search-column admin">								<g:textField 									class="w-input search-text-field" 									id="search_query"									name="q" value="${params?.q?.encodeAsHTML()}"									placeholder="search" 								/>							</div>							<div class="w-col w-col-3 w-clearfix search-column admin">								<input class="w-button searchsubmit" type="submit" value="Search">							</div>						</div>					</g:form>				</div>				<div id="fileList">					<g:render template="remoteFileList" />				</div>			</div>		</div>	</body></html>