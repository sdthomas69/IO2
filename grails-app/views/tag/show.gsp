<g:set var="thumbnail" value="${grailsApplication.config.default_thumbnail}"/><html><head>    <meta name="layout" content="main">    <title>${tagInstance}</title>    <g:if test="${tagInstance.hasVideos()}">        <script type="text/javascript" src="<g:resource dir='jwplayer' file='jwplayer.js'/>"></script>        <script type="text/javascript" src="<g:resource file='json/videos/tag/${tagInstance.id}'/>"></script>    </g:if></head><body><g:render template="/tagAdmin/adminInfo"/><div class="w-section">    <div class="w-container body-text-container primary-small">        <div class="w-row">            <!-- Left Column -->            <div class="w-col w-col-9 w-clearfix description-text-column">                <h2>${tagInstance.title.capitalize()}</h2>                <g:if test="${tagInstance.hasVideos()}">                    <div id='mediaplayer'></div>                    <script type="text/javascript">                        jwplayer('mediaplayer').setup({                            'id': 'playerID',                            androidhls: true,                            primary: 'flash',                            width: "100%",                            aspectratio: "16:9",                            'playlist': playlist,                            'controlbar': 'bottom',                            'stretching': 'exactfit',                            rtmp: {bufferlength: 3},                            logo: {                                file: '/images/logo.png',                                link: 'http://www.interactiveoceans.washington.edu'                            },                            'plugins': {                                'http://luwes.co/flow-jw/3.0/flow.js': {                                    'showtext': 'true',                                    'coverheight': '225',                                    'coverwidth': '400',                                    'size': '225'                                }                            }                        });                    </script>                    <hr>                </g:if>                <g:if test="${tagInstance.stories}">                    <h4 class="subheader">Stories</h4>                    <div class="w-row">                        <g:each in="${tagInstance.stories.sort()}" var="thisStory" status="i">                            <div class="w-col w-col-3">                                <a href="<blackFish:setLink object='${thisStory}' name='story'/>"                                   class="w-inline-block spotlight-link-block">                                    <img src="<g:resource                                            file='${thisStory?.primaryImage?.smallImageSquared ?: thumbnail}'/>">                                </a>                                <div class="spotlight-text">                                    <a href="<blackFish:setLink object='${thisStory}' name='story'/>">                                        ${thisStory.pageTitle}                                    </a>                                </div>                            </div>                        </g:each>                    </div>                    <hr>                </g:if>                <g:if test="${tagInstance.files}">                    <h4 class="subheader">Files</h4>                    <div class="w-row">                        <g:each in="${tagInstance.files?.sort()}" var="file" status="i">                            <g:if test="${file.type == 'Image'}">                                <div class="w-col w-col-3">                                    <a href="<blackFish:setLink object='${file}' name='file'/>"                                       class="w-inline-block spotlight-link-block">                                        <img src="<g:resource file='${file.smallImageSquared}'/>" class="th">                                    </a>                                    <div class="spotlight-text">                                        <a href="<blackFish:setLink object='${file}' name='file'/>">                                            ${file}                                        </a>                                    </div>                                </div>                            </g:if>                        </g:each>                    </div>                </g:if>            </div>            <!-- Right Column -->            <div class="w-col w-col-3 sidebar-right">                <g:include controller="tag" action="getTagCloud" params="[template: '/tag/tags']"/>            </div>        </div>        <g:render template="/tagAdmin/editButton"/>    </div></div></body></html>