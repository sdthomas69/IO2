<div class="w-row">	<g:if test="${userInstance.files}">		<g:each in="${userInstance.files.sort()}" var="file" status="i">				<blackFish:tagWrapper 				tag="div" 				className="w-row file-list-row"				iterations="4"				counter="${i}"				total="${userInstance.files.size()}">				<div class="w-col w-col-3">					<g:link action="show" controller="file" id="${file.id}" >						<img src="<g:resource file='${file.smallImageSquared ?: file.tinyImage}' />" alt="${file}">					</g:link>					<div class="file-list-text">						<g:link action="show" controller="file" id="${file.id}">							${file}						</g:link>					</div>				</div>			</blackFish:tagWrapper>		</g:each> 	</g:if></div>