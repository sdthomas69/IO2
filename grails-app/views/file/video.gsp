<html><head>    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>    <meta name="layout" content="${params.site ?: 'main'}"/>    <script type="text/javascript" src="<g:resource dir='jwplayer' file='jwplayer.js'/>"></script>    <script type="text/javascript" src="<g:resource dir='jwplayer' file='iscroll.js'/>"></script>    <script type="text/javascript" src="<g:resource file='json/videos/tag/${tagInstance?.id}'/>"></script>    <title>Video</title></head><body class="story"><div class="grid_16">    <g:if test="${flash.message}">        <div class="message">${flash.message}</div>    </g:if></div><div class="clear"></div><div class="grid_16">    <div id="VideoPost">        <div id="container">Loading the player...</div>        <script type="text/javascript">            jwplayer("container").setup({                'playlist': playlist,                autostart: false,                'width': '940',                'height': '452',                'playlist.position': 'right',                'playlist.size': '136',                "skin": "<g:resource dir='jwplayer' file='glow.zip' />",                repeat: "list"            });        </script>    </div></div><div class="grid_16">    <div class="clear"></div>    <div class="grid_4 alpha">        <g:render template="/common/imageTags"/>    </div>    <div class="grid_12 omega">        <div class="hrSideLineMedia">Latest Videos</div>        <div id="relatedStories">            <g:each in="${videoList}" var="file" status="i">                <g:set var="link"                       value="${createLink(controller: 'file', action: 'title', params: ['title': file.urlTitle])}"/>                <div id="storyBox"                     class='<blackFish:setClass counter="${i}" width="2" beginDiv="grid_6 alpha" middleDiv="grid_6"                                                endDiv="grid_6 omega"/>'>                    <div class="grid_2 alpha">                        <a href="${link}">                            <img class="peopleNail" src="<g:resource file='${file.tinyImage ?: file.smallImage}'/>"                                 alt="${file}" width="96" height="96" border="0"/>                        </a>                    </div>                    <div class="grid_4 omega">                        <h5 class="storyTitle">                            <a href="${link}">${file.title.size() > 20 ? file.title[0..20] : file}</a>                        </h5>                        <g:if test="${file?.shortDescription?.size() > 150}">${file.shortDescription[0..150]} <a                                href="${link}">...</a></g:if>                        <g:else>${file?.shortDescription}</g:else>                    </div>                </div>            </g:each>            <g:if test="${videoList.getTotalCount() > params.max}">                <div class="paginateButtons">                    <g:paginate total="${videoList.getTotalCount()}" params="${params}"/>                </div>            </g:if>        </div>    </div></div><div class="clear"></div></body></html>