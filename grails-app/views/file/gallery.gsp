<g:set var="thumbnail" value="${grailsApplication.config.default_thumbnail}"/><g:set var="url" value="${grailsApplication.config.grails.serverURL}"/><html><head>    <title>Gallery</title>    <meta name="layout" content="${params.site ?: 'main'}"/>    <script type="text/javascript" src="<g:resource dir='js' file='shadowbox/shadowbox.js'/>"></script>    <link media="screen, projection" rel="Stylesheet" type="text/css"          href="<g:resource dir='js' file='shadowbox/shadowbox.css'/>"/>    <script type="text/javascript" src="<g:resource dir='jwplayer' file='jwplayer.js'/>"></script>    <script type="text/javascript"            src="http://ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js">    </script>    <script type="text/javascript">        Shadowbox.init({            modal: true        });    </script></head><body class="story"><div class="container_16">    <div id="sidebar" class="grid_4">        <g:render template="/common/simpleSearchSidebar"/>        &nbsp;        <g:include controller="tag" action="getTagCloud" params="[template: '/common/tags', 'site': params.site]"/>    </div>    <div id="postResources" class="grid_12">        <div class="header">            <div id="playlist" class="grid_12">                <div class="spacer">&nbsp;</div>                <g:each in="${fileList}" var="file" status="i">                    <div class='<blackFish:setClass counter="${i}" width="6" beginDiv="grid_2 alpha" middleDiv="grid_2"                                                    endDiv="grid_2 omega"/>'>                        <a href="${file.mediumImage ?: file.smallImage}"                           rel="shadowbox[Mixed]; title=<a href='/file/${file.title.encodeAsURL()}'>${file} &nbsp; More info...</a>"                           title="${file}">                            <img src="${file?.tinyImage ?: file.smallImage}" class="peopleNail" width="96" height="96"/>                        </a>                    </div>                    <g:if test="${i % 6 == 5}">                        <div class="middleSpacer"></div>                    </g:if>                </g:each>                <div class="spacer">&nbsp;</div>            </div>            <g:if test="${fileList?.getTotalCount() > params?.max}">                <div class="paginateButtons">                    <g:paginate total="${fileList.getTotalCount()}" params="${params}"/>                </div>            </g:if>            <div class="clearer">&nbsp;</div>            <br clear="all"/>            <div class="clear"></div>        </div>    </div></div></body></html>