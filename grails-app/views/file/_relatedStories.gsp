<g:if test="${file.stories}">    <g:set var="thumbnail" value="${grailsApplication.config.default_thumbnail}"/>    <div class="associated-files-div-block">        <h3 class="eventstitle">Related Stories</h3>        <ul class="latest-news-list files">            <g:each in="${file.stories?.sort()}" var="story" status="i">                <li class="latest-news-item">                    <a class="w-inline-block" href="<blackFish:setLink object="${story}" name="story"/>">                        <g:if test="${story.primaryImage}">                            <img src="<g:resource file='${story.primaryImage.smallSlideImage}'/>" width="220">                        </g:if>                        <h4 class="latest-news-heading">${story.title}</h4>                    </a>                </li>            </g:each>        </ul>    </div></g:if>