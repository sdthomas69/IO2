<html><head>    <meta name="layout" content="mainCoe"/>    <title>File List</title></head><body><div class="small-12 large-12 columns" role="main" id="main-col">    <div class="section">        <div class="container" role="document">            <div class="row">                <div class="small-12 medium-4 large-3 medium-push-9 large-push-9 columns">                    <div class="callout">                        <g:form action="list" method="get">                            <div class="row">                                <div class="small-12 large-12 columns">                                    <select class="select-category" name="view" size="1">                                        <option value="${params.view}">${params.view ? 'View: ' + params.view : 'View Options'}</option>                                        <option value="icon">Icon</option>                                        <option value="list">List</option>                                    </select>                                </div>                                <div class="small-12 large-12 columns">                                    <g:checkBox name="titleOnly" value="${false}"></g:checkBox>                                    <label for="titleOnly">Search Titles Only</label>                                </div>                                <div class="small-12 large-12 columns">                                    <g:textField                                            class="input"                                            id="search_query"                                            name="q" value="${params?.q?.encodeAsHTML()}"                                            placeholder="search"/>                                </div>                                <div class="small-12 large-12 columns">                                    <input class="buttonBF" type="submit" value="Search">                                </div>                                <div class="small-12 columns">                                    <hr>                                </div>                            </div>                        </g:form>                        <g:include controller="tag" action="getTagCloud" params="[template: '/tag/tags']"/>                    </div>                </div>                <div class="small-12 medium-8 large-9 medium-pull-3 large-pull-3 columns">                    <h2>Presentations</h2>                    <g:if test="${params.view == 'list'}">                        <div class="row">                            <div class="columns large-12">                                <table>                                    <thead>                                    <tr>                                        <g:sortableColumn                                                property="title"                                                title="Title"                                                params="[                                                        'max'   : params?.max,                                                        'offset': params?.offset,                                                        'type'  : params.type,                                                        'view'  : params.view,                                                        'site'  : params.site                                                ]"/>                                        <g:sortableColumn                                                property="date"                                                title="Date"                                                params="[                                                        'max'   : params?.max,                                                        'offset': params?.offset,                                                        'type'  : params.type,                                                        'view'  : params.view,                                                        'site'  : params.site                                                ]"/>                                    </tr>                                    </thead>                                    <tbody>                                    <g:each in="${fileList}" status="i" var="file">                                        <tr class="${(i % 2) == 0 ? 'odd' : 'even'}">                                            <td>                                                <g:link controller="file" action="title"                                                        params="['title': file.urlTitle]">                                                    ${file}                                                </g:link>                                            </td>                                            <td>                                                <g:formatDate format="yyyy-MM-dd" date="${file.date}"/>                                            </td>                                        </tr>                                    </g:each>                                    </tbody>                                </table>                            </div>                        </div>                    </g:if>                    <g:else>                        <ul class="small-block-grid-3 medium-block-grid-4 large-block-grid-6">                            <g:each in="${fileList}" var="file" status="i">                                <li>                                    <a class="overlay2" href="<blackFish:setLink object='${file}' name='file'/>">                                        <img class="image"                                             src="<g:resource file='${file?.smallImageSquared ?: thumbnail}'/>"                                             alt="${file}"/>                                    </a>                                    <div class="description">                                        ${file}                                    </div>                                </li>                            </g:each>                        </ul>                    </g:else>                </div>            </div>        </div>    </div></div></body></html>