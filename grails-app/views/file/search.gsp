<%@ page import="org.springframework.util.ClassUtils" %><html><head>    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>    <meta name="layout" content="${params.site ?: 'oldMain'}"/>    <title>Search Results</title></head><body class="story"><div class="grid_16">    <table align="left">        <tr>            <td>                <g:form url='[controller: ' file', action: 'search']' id="searchableForm" name="searchableForm"                        method="get">                    <g:textField name="q" value="${params?.q?.encodeAsHTML()}"/> &nbsp;                    <input type="submit" value="Search"/>                </g:form>            </td>        </tr>    </table></div><div id="smallThumbs160" class="grid_16">    <div class="spacer">&nbsp;</div>    <g:each var="result" in="${searchResult}" status="i">        <g:set var="className" value="${ClassUtils.getShortName(result.getClass())}"/>        <g:set var="link"               value="${createLink(controller: className[0].toLowerCase() + className[1..-1], action: 'title', params: ['title': result?.title.replaceAll(' ', '_')])}"/>        <div class='<blackFish:setClass counter="${i}" width="8" beginDiv="grid_2 alpha" middleDiv="grid_2"                                        endDiv="grid_2 omega"/>'>            <g:link url='${link}'><img class="imageborder" src="<g:resource file='${result.smallImage}'/>" alt=""                                       width="100" border="0"/></g:link>            <p class="imagecaption"><g:link url='${link}'>${result}</g:link></p>        </div>        <g:if test="${i % 8 == 7}">            <div class="middleSpacer"></div>        </g:if>    </g:each>    <div class="spacer">&nbsp;</div></div><g:if test="${searchResult?.getTotalCount() > params?.max}">    <div class="paginateButtons">        <g:paginate total="${searchResult.getTotalCount()}" params="${params}"/>    </div></g:if></body></html>